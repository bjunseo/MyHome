                android:text="home"
                android:id="@+id/h_btn"
                android:layout_width="200dp"
                android:layout_height="50dp" />
            <Space
                android:layout_width="108dp"
                android:layout_height="50dp"/>
        </TableRow>

        <TableRow>
            <Space
                android:layout_height="20dp"/>
        </TableRow>

        <TableRow>
            <Space
                android:layout_width="108dp"
                android:layout_height="50dp"/>
